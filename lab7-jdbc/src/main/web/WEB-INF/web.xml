<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <listener>
        <listener-class>listeners.StartupListener</listener-class>
    </listener>
    
    <servlet>
        <servlet-name>ListServlet</servlet-name>
        <servlet-class>servlets.ListServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ShoppingListServlet</servlet-name>
        <servlet-class>servlets.ShoppingListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShoppingListServlet</servlet-name>
        <url-pattern>/showList</url-pattern>
    </servlet-mapping>
    
</web-app>